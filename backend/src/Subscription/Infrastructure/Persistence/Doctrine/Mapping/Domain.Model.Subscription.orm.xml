<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Subscription\Domain\Model\Subscription" table="subscription">
        <id name="id" type="uuid" column="id">
            <generator strategy="NONE"/>
        </id>
        <field name="startDate" type="datetime_immutable" column="start_date" nullable="false"/>
        <field name="endDate" type="datetime_immutable" column="end_date" nullable="true"/>
        <field name="active" type="boolean" column="active" nullable="false"/>
        <field name="cancelled" type="boolean" column="cancelled" nullable="false"/>
        <field name="productName" type="string" column="product_name" nullable="false" length="255"/>
        <field name="createdAt" type="datetime_immutable" column="created_at" nullable="false"/>
        <field name="updatedAt" type="datetime_immutable" column="updated_at" nullable="true"/>
        <many-to-one field="user" target-entity="App\User\Domain\Model\User">
            <join-column name="user_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
        <many-to-one field="pricingOption" target-entity="App\Product\Domain\Model\PricingOption">
            <join-column name="pricing_option_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <indexes>
            <index name="idx_subscription_user_active" columns="user_id,active"/>
            <index name="idx_subscription_dates" columns="start_date,end_date"/>
            <index name="idx_subscription_product_name" columns="product_name,active"/>
            <index name="idx_subscription_user_product" columns="user_id,product_name"/>
        </indexes>
        <unique-constraints>
            <unique-constraint name="unique_active_user_product" columns="user_id,product_name,active"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>